{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": false,
        "noLib": false,
        "declaration": true,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "lib": ["ESNext", "dom"],
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "preserveValueImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "sourceRoot": "./src",
        "outDir": "./plugin",
        "paths": {
            "@nativescript-community/ui-barcodeview/*": ["src/*"],
            "@nativescript-community/ui-barcodeview/": ["src/barcodeview"]
        },
        "plugins": [{ "transform": "@nativescript/webpack/dist/transformers/NativeClass", "type": "raw" }]
    },
    "include": ["src/**/*", "src/**/*.ts", "./references.d.ts", "./src/references.d.ts"],
    "exclude": ["platforms"],
    "compileOnSave": false
}
